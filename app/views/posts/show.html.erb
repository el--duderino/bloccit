<h1><%= markdown @post.title %></h1>

<div class="row">
  <div class="col-md-8">
    <small>
      <%= image_tag(@post.user.avatar.small.url) if @post.user.avatar? %>
      submitted <%= time_ago_in_words(@post.created_at) %> ago by
      <%= @post.user.name %>
    </small>
    <p><%= markdown @post.body %></p>
    <%= image_tag @post.image.url %>

    <h3>Comments</h3>

    <%= render @comments %>

    <%= form_for [@topic, @post, @comment] do |f| %>
      <%= f.text_area :body, rows: 8, columns: 10, class: 'form-control', placeholder: "Enter comment" %>
      <%= f.submit "Create comment", class: 'btn btn-success' %>
    <% end %>
    <br />

  </div>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic,@post), class: 'btn btn-success' %>
    <% end %>
    <%= link_to "Delete", [@topic, @post], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } if policy(@post).destroy? %>
  </div>
</div>