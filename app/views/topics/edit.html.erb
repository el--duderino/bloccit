<h1>Edit topic</h1>

<%= form_for @topic do |f| %>
  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Topic name' %>
  </div>
  <div class='form-group'>
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control', placeholder: 'Topic description' %>
  </div>
  <div class='form-group'>
    <%= f.submit "Update", class: 'btn btn-success' %>
  </div>
<% end %>