<% if @comment.valid? %>
  $('.js-comments').prepend("<%= escape_javascript(render(@comment)) %>");
  $('#comment-<%= @comment.id %>').hide().show('fast');
  $('.new_comment').html("<%= escape_javascript(render partial: 'comments/form', locals: { topic: @topic, post: @post, comment: @new_comment }) %>");
  $('.js-comments-count').html("<%= @post.comments.count %> Comments");
<% else %>
  $('.new_comment').html("<%= escape_javascript(render partial: 'comments/form', locals: { topic: @topic, post: @post, comment: @comment }) %>")
<% end %>